<style>
  a {
    text-decoration: none;
    color: #000;
  }
</style>

<div class="section" id="gallery">
  <% @posts = Post.where(p_type: "photo") %>
    <% if @posts %>
      <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
          <%= post.meta_image.html_safe %>
        <% end %>
      <% end %>
   <% end %>
</div>