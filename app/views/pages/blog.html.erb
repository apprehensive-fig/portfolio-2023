<div class="section">
  <%= render "sidebar" %>

  <div class="container blog">
    <div class="posts">
      <% if @posts %>
        <% @posts.each do |post| %>
          <%= link_to "/blog/#{post.title}" do %>
            <div class="post" style="background: url(<%= post.meta_image %>) no-repeat center / cover">
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= render "footer" %>
</div>

<%= render "cursor_tag" %>

<script>
  window.onscroll = function() {
    // Check if the screen width is greater than 960px
    var navbar = document.querySelector('.sidebar');
      if (window.scrollY > 0) {
        navbar.style.top = '0';
      } else {
        navbar.style.top = '60px';
      }
  };
</script>
