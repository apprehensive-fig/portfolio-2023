<style>
.thumbnails {
  display: flex;
  justify-content: center;
  align-items: center;
}

.left,
.right {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.left img,
.right img {
  display: block;
  width: 100%;
  height: auto;
  position: absolute;
  opacity: 0;
  transition: opacity 1s;
}

.left img:nth-child(2),
.right img:nth-child(2) {
  opacity: 0;
}

/* Hover effect for left */
.left:hover img:first-child {
  opacity: 0;
}

.left:hover img:nth-child(2) {
  opacity: 1;
}

/* Reset for left when not hovering */
.left:not(:hover) img:first-child {
  opacity: 1;
}

.left:not(:hover) img:nth-child(2) {
  opacity: 0;
}

/* Hover effect for right */
.right:hover img:first-child {
  opacity: 0;
}

.right:hover img:nth-child(2) {
  opacity: 1;
}

/* Reset for right when not hovering */
.right:not(:hover) img:first-child {
  opacity: 1;
}

.right:not(:hover) img:nth-child(2) {
  opacity: 0;
}
</style>

