<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 30px;
  }
</style>

<div class="container">
  <%= form_for @post, url: {action: "update"}, html: {class: "form"} do |f| %>

    <div>
      <label>type: </label>
      <%= f.text_field :p_type %>
    </div>

    <div>
      <label>title: </label>
      <%= f.text_field :title %>
    </div>

    <div>
      <label>meta image url: </label>
      <%= f.text_field :meta_image %>
    </div>

    <div>
      <%= f.text_area :body, size: "60x10" %>
    </div>

    <%= f.submit %>

   <% end %>
</div>